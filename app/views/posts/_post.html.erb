<div class="eachPost" id="<%= dom_id post %>">
  <h1>
    <strong><%= post.title %></strong>
    
  </h1>

  <div class="postsInfo">
    <p>
      <strong>Autor:</strong>
      <%= post.username %>
    </p>
    
    <p>
      <strong>Publicado em:</strong>
      <%= post.created_at.strftime("%d/%m/%Y") %>
    </p>

    <p>
      <% if post.tags.any? %>
        <strong>Tags:</strong> <%= @post.tags.map(&:name).join(", ") %>
      <% end %>
    </p>
  </div>

  <p>
    <%= simple_format(post.content) %>
  </p>
</div>
