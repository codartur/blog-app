<section class="sessionSection">
  <h2>Entre na sua conta!</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder:"Senha" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Lembrar de mim" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Entrar" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</section>
